<h2>User Dashboard</h2>

<form method="get" action="/Book/Search">
    <input type="text" name="searchString" placeholder="Search for books" />
    <input type="submit" value="Search" />
</form>

<h3>Your Books</h3>
@if (Model != null)
{
    <table>
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Title</th>
                <th>ISBN</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.Title</td>
                    <td>@book.ISBN</td>
                    <td>
                        <form method="post" action="/Book/Return">
                            <input type="hidden" name="bookId" value="@book.BookId" />
                            <button type="submit">Return</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You currently have no books checked out.</p>
}
